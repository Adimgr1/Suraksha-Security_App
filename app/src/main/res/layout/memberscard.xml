<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="15dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/membersCard"/>
        <ImageView
            android:id="@+id/dp"
            android:layout_width="140dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="@id/membersCard"
            app:layout_constraintStart_toStartOf="@id/membersCard"
            android:elevation="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/dp"
            />
    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aditya Kumar"
        android:textSize="25sp"
        android:elevation="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/membersCard"
        app:layout_constraintStart_toEndOf="@id/dp"
        android:layout_marginTop="40sp"/>
    <ImageView
        android:id="@+id/location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/Name"
        app:layout_constraintStart_toEndOf="@id/dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/location"/>

        />
    <TextView
        android:id="@+id/locationText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Subhash Nagar, Munger, Bihar, India"
        android:textColor="@color/lightBlue"
        android:elevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/Name"
        app:layout_constraintStart_toEndOf="@id/location"
        android:layout_marginTop="15dp"
        />
    <ImageView
        android:id="@+id/phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintStart_toEndOf="@id/dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/telephone"/>
    <TextView
        android:id="@+id/number"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="8955163181"
        android:textColor="@color/lightBlue"
        android:elevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/locationText"
        app:layout_constraintStart_toEndOf="@id/phone"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        />


    />



    
    
        
        

</androidx.constraintlayout.widget.ConstraintLayout>